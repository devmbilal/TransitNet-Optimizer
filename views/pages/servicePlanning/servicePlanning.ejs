<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.pageName %> - TransitNet Optimizer</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    
    <!-- Main CSS for sidebar and navbar styling -->
    <link rel="stylesheet" href="/css/main.css" />
    
    <!-- Custom CSS - Isolated -->
    <link rel="stylesheet" href="/css/servicePlanning.css">
</head>
<body>
    <div class="service-planning-container">
        <%- include('../../partials/sidebar') %>
        <!-- Header Section -->
        <div class="planning-header">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-lg-8 col-xl-9">
                        <h1 class="page-title">
                            <i class="fas fa-route"></i>
                            Interactive Service Planning
                        </h1>
                        <p class="page-subtitle">
                            Load optimization results, modify routes visually, and export your service plan with real-time analysis
                        </p>
                    </div>
                    <div class="col-lg-4 col-xl-3">
                        <div class="d-flex justify-content-lg-end">
                            <button class="btn btn-outline-primary" id="helpBtn">
                                <i class="fas fa-question-circle me-1"></i>
                                <span class="d-none d-lg-inline">Help</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Planning Layout - Bootstrap Row/Col like Route Creation -->
        <div class="row">
            <!-- Region & Baseline Panel -->
            <div class="col-md-3">
                <div style="height: 700px; overflow-y: auto;">
                    <div class="p-3">
                        <!-- Region Selection Card -->
                        <div class="card mb-3 border-0 shadow-sm">
                            <div class="card-header bg-primary text-white py-2">
                                <h6 class="mb-0"><i class="fas fa-map-marker-alt"></i> Select Region & Optimization</h6>
                            </div>
                            <div class="card-body p-3">
                                <div class="mb-2">
                                    <label class="form-label small fw-bold">Region:</label>
                                    <select class="form-select form-select-sm" id="regionSelect">
                                        <option value="">Choose a region...</option>
                                        <% regions.forEach(region => { %>
                                        <option value="<%= region %>"><%= region %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label small fw-bold">Optimization Session:</label>
                                    <select class="form-select form-select-sm" id="optimizationSelect" disabled>
                                        <option value="">Select region first...</option>
                                    </select>
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-sm" id="loadOptimizationBtn" disabled>
                                        <i class="fas fa-download me-1"></i>Load Results
                                    </button>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Baseline Metrics Card -->
                        <div class="card mb-3 border-0 shadow-sm" id="baselineMetrics" style="display: none;">
                            <div class="card-header bg-success text-white py-2">
                                <h6 class="mb-0"><i class="fas fa-chart-bar"></i> Optimization Results</h6>
                            </div>
                            <div class="card-body p-3">
                                <div class="row g-2 small text-center">
                                    <div class="col-6">
                                        <div class="text-muted">Distance:</div>
                                        <div id="baselineDistance" class="fw-bold text-primary">-</div>
                                        <div id="baselineDistanceChange" class="text-success" style="font-size: 0.75rem;">-</div>
                                    </div>
                                    <div class="col-6">
                                        <div class="text-muted">Mobility:</div>
                                        <div id="baselineMobility" class="fw-bold text-primary">-</div>
                                        <div id="baselineMobilityChange" class="text-success" style="font-size: 0.75rem;">-</div>
                                    </div>
                                    <div class="col-12">
                                        <div class="text-muted">Efficiency:</div>
                                        <div id="baselineEfficiency" class="fw-bold text-primary">-</div>
                                        <div id="baselineEfficiencyChange" class="text-success" style="font-size: 0.75rem;">-</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Optimized Routes List -->
                        <div class="card border-0 shadow-sm" id="baselineRoutesList" style="display: none;">
                            <div class="card-header bg-warning text-dark py-2">
                                <h6 class="mb-0"><i class="fas fa-route"></i> Top Optimized Routes</h6>
                            </div>
                            <div class="card-body p-2" style="min-height: 300px; max-height: 300px; overflow-y: auto;">
                                <ul class="list-unstyled" id="optimizedRoutes">
                                    <!-- Routes will be populated here -->
                                </ul>
                            </div>
                        </div>
                        
                        <!-- Initial State -->
                        <div id="baselineContent">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body text-center py-4">
                                    <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Select a region and optimization to view baseline routes</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Interactive Map Panel -->
            <div class="col-md-6">
                <div class="p-3">
                    <div class="card border-0 shadow">
                        <div class="card-header bg-info text-white py-2 d-flex justify-content-between align-items-center">
                            <h6 class="mb-0"><i class="fas fa-map"></i> Interactive Route Planning</h6>
                            <div>
                                <span id="mapStatus" class="badge bg-light text-dark">Ready</span>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="position-relative" style="height: 620px;">
                                <div id="planningMap" class="h-100 w-100" style="height: 620px; min-height: 620px;"></div>
                                
                                <!-- Map Controls -->
                                <div class="position-absolute bottom-0 end-0 m-3" style="z-index: 1000;">
                                    <div class="btn-group-vertical" role="group">
                                        <button class="btn btn-sm btn-success" id="addRouteMode" title="Add Route" disabled>
                                            <i class="fas fa-plus"></i>
                                        </button>
                                        <button class="btn btn-sm btn-warning" id="editRouteMode" title="Edit Route" disabled>
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" id="deleteRouteMode" title="Delete Route" disabled>
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <button class="btn btn-sm btn-info" id="resetMapView" title="Reset View">
                                            <i class="fas fa-home"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Comparison & Export Panel -->
            <div class="col-md-3">
                <div style="height: 700px; overflow-y: auto;">
                    <div class="p-3">
                        <!-- Comparison Panel -->
                        <div class="card mb-3 border-0 shadow-sm">
                            <div class="card-header bg-secondary text-white py-2">
                                <h6 class="mb-0"><i class="fas fa-balance-scale"></i> Plan Comparison</h6>
                            </div>
                            <div class="card-body p-3">
                                <div id="comparisonContent">
                                    <div class="text-center text-muted py-3">
                                        <i class="fas fa-lightbulb fa-2x mb-2"></i>
                                        <p class="small mb-0">Start modifying routes on the map to see comparisons</p>
                                    </div>
                                </div>
                                
                                <div id="comparisonMetrics" style="display: none;">
                                    <h6 class="small fw-bold mb-2">Performance Changes:</h6>
                                    
                                    <div class="mb-2 p-2 bg-light rounded">
                                        <div class="small text-muted">Distance Change:</div>
                                        <div class="fw-bold" id="distanceChange">-</div>
                                        <div class="small" id="distanceChangePercent">-</div>
                                    </div>
                                    
                                    <div class="mb-2 p-2 bg-light rounded">
                                        <div class="small text-muted">Mobility Impact:</div>
                                        <div class="fw-bold" id="mobilityChange">-</div>
                                        <div class="small" id="mobilityChangePercent">-</div>
                                    </div>
                                    
                                    <div class="mb-2 p-2 bg-light rounded">
                                        <div class="small text-muted">Cost Difference:</div>
                                        <div class="fw-bold" id="costChange">-</div>
                                        <div class="small" id="costChangePercent">-</div>
                                    </div>
                                    
                                    <div class="mt-3 pt-2 border-top">
                                        <div id="routesSummary" class="text-center">
                                            <!-- Route counts summary will be inserted here -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Export Section -->
                        <div class="card border-0 shadow-sm" id="exportSection" style="display: none;">
                            <div class="card-header bg-dark text-white py-2">
                                <h6 class="mb-0"><i class="fas fa-download"></i> Export Your Plan</h6>
                            </div>
                            <div class="card-body p-3">
                                <div class="d-grid gap-2">
                                    <button class="btn btn-success btn-sm" id="exportRoutesBtn">
                                        <i class="fas fa-route me-1"></i>Export Routes
                                    </button>
                                    <button class="btn btn-info btn-sm" id="exportSummaryBtn">
                                        <i class="fas fa-file-alt me-1"></i>Export Summary
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/interactiveServicePlanning.js"></script>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <script>
            console.error('Server Error:', '<%= error %>');
            alert('Error loading service planning page: <%= error %>');
        </script>
    <% } %>
</body>
</html>
