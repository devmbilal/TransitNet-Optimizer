<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Visualization Dashboard</title>
    <!-- Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <!-- Leaflet CSS CDN -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/visualization.css" />
  </head>
  <body>
    <div class="container-fluid p-0">

      <!-- Region Dropdown -->
      <div class="p-3 select-region">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="input-group">
              <span class="input-group-text">
                <i class="bi bi-geo-alt"></i> Select Region:
              </span>
              <select
                class="form-select"
                id="regionSelect"
                onchange="fetchFiles(this.value)"
              >
                <option value="" selected disabled>Choose a region...</option>
                <% regions.forEach(region => { %>
                <option value="<%= region %>"><%= region %></option>
                <% }) %>
              </select>
            </div>
          </div>
        </div>
      </div>

      <!-- Horizontal Pane: Three Equal Sections -->
      <div class="horizontal-pane bg-light shadow-sm p-3 mb-4">
        <div class="row g-0">
          <!-- Transport Files -->
          <div class="col-md-4">
            <div class="card shadow-sm h-100">
              <div class="card-header text-white files-heading">
                <h5 class="mb-0">Transport Files</h5>
              </div>
              <div
                class="card-body overflow-auto"
                style="max-height: 150px; width: 100%" /* Retain max-height, set full width */
                id="transportFiles"
              >
                <% if (files && files.transportFiles.length > 0) { %> <%
                files.transportFiles.forEach((file, index) => { %>
                <div class="form-check mb-2 w-100">
                  <input
                    class="form-check-input route-checkbox"
                    type="checkbox"
                    id="route<%= index %>"
                    data-file="<%= file.fileName %>"
                    data-color="<%= ['#FF0000', '#0000FF', '#008000', '#800080', '#FFA500', '#00CED1', '#FF4500', '#FFD700', '#6A5ACD', '#20B2AA', '#DC143C', '#32CD32', '#9932CC', '#FF69B4', '#00FF7F', '#4682B4', '#DAA520', '#8B008B', '#ADFF2F', '#4169E1'][index % 20] %>"
                    onchange="toggleRoute(this)"
                  />
                  <label class="form-check-label w-100" for="route<%= index %>">
                    <%= file.fileName %>
                  </label>
                </div>
                <% }) %> <% } else { %>
                <p class="text-muted">No transport files available.</p>
                <% } %>
              </div>
            </div>
          </div>

<!-- Mobility Coordinates -->
<div class="col-md-4">
  <div class="card shadow-sm h-100">
    <div class="card-header files-heading text-white">
      <h5 class="mb-0">Mobility Coordinates</h5>
    </div>
    <div
      class="card-body overflow-auto"
      style="max-height: 150px; width: 100%"
      id="mobilityCoord"
    >
      <!-- Content will be populated by fetchFiles -->
    </div>
  </div>
</div>
          <!-- Filtration Options -->
          <div class="col-md-4">
            <div class="card shadow-sm h-100">
              <div class="card-header files-heading text-white">
                <h5 class="mb-0">Filtration Options</h5>
              </div>
              <div class="card-body">
                
                <div class="form-check mb-2">
                  <input
                    class="form-check-input filter-checkbox"
                    type="checkbox"
                    id="travelDistance"
                    onchange="applyFilters()"
                  />
                  <label class="form-check-label" for="travelDistance"
                    >Show Travel Distance</label
                  >
                </div>
                <div class="form-check mb-2">
                  <input
                    class="form-check-input filter-checkbox"
                    type="checkbox"
                    id="haversineDistance"
                    onchange="applyFilters()"
                  />
                  <label class="form-check-label" for="haversineDistance"
                    >Show Haversine Distance</label
                  >
                </div>
                <div class="form-check mb-2">
                  <input
                    class="form-check-input filter-checkbox"
                    type="checkbox"
                    id="showMobility"
                    onchange="applyFilters()"
                  />
                  <label class="form-check-label" for="showMobility"
                    >Show Mobility</label
                  >
                </div>
                <button
                  class="btn btn-danger w-100 mb-3"
                  id="removeMobilityEdges"
                  onclick="removeMobilityEdges()"
                >
                  Remove Mobility Edges
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Full-Screen Map -->
      <div class="map-container">
        <div class="card shadow-sm h-100">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0">Map View</h5>
          </div>
          <div class="card-body p-0">
            <div id="map" class="map-placeholder"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Leaflet JS CDN -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <!-- Leaflet Polyline Decorator -->
    <script src="https://unpkg.com/leaflet.polyline-decorator@1.6.0/dist/leaflet.polylineDecorator.js"></script>
    <!-- Custom JS -->
    <script src="/js/visualization.js"></script>
  </body>
</html>