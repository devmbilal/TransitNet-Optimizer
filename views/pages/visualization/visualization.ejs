
<!-- Main Content Layout -->
<div class="row">
  <!-- Map Area -->
  <div class="col-md-8">
    <div class="p-3">
      <div class="position-relative" style="height: 600px;">
        <div id="map" class="h-100 w-100 border rounded"></div>
        <!-- Map Loading Overlay -->
        <div id="mapOverlay" class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-white bg-opacity-75 rounded" style="z-index: 1000; display: none !important;">
          <div class="text-center">
            <div class="spinner-border text-primary" role="status"></div>
            <div class="mt-2">Loading map data...</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Side: Controls Panel -->
  <div class="col-md-4">
    <div class="" style="height: 600px; overflow-y: auto;">
      <div class="p-3">
          
          <!-- Region Selection Section -->
          <div class="card mb-3 border-0 shadow-sm">
            <div class="card-header bg-dark text-white py-2">
              <h6 class="mb-0"><i class="bi bi-geo-alt-fill"></i> Region Selection</h6>
            </div>
            <div class="card-body p-3">
              <div class="mb-0">
                <label for="regionSelect" class="form-label small fw-bold">
                  Choose Region:
                </label>
                <select
                  class="form-select form-select-sm"
                  id="regionSelect"
                  onchange="fetchFiles(this.value)"
                >
                  <option value="" selected disabled>Choose a region...</option>
                  <% regions.forEach(region => { %>
                  <option value="<%= region %>"><%= region %></option>
                  <% }) %>
                </select>
              </div>
            </div>
          </div>

          <!-- Transport Routes Section -->
          <div class="card mb-3 border-0 shadow-sm">
            <div class="card-header bg-primary text-white py-2 d-flex justify-content-between align-items-center">
              <h6 class="mb-0"><i class="bi bi-bus-front"></i> Public Transport Routes</h6>
              <button 
                id="checkAllRoutesBtn" 
                class="btn btn-outline-light btn-sm" 
                onclick="toggleAllRoutes()" 
                style="display: none;"
                title="Check/Uncheck all routes"
              >
                <i class="bi bi-check-all"></i> All
              </button>
            </div>
            <div class="card-body p-3" id="transportRoutesContainer" style="max-height: 300px; overflow-y: auto;">
              <div class="text-muted text-center py-3">
                <i class="bi bi-info-circle"></i> Select a region to load routes
              </div>
            </div>
          </div>

          <!-- Mobility Nodes Section -->
          <div class="card mb-3 border-0 shadow-sm">
            <div class="card-header bg-success text-white py-2">
              <h6 class="mb-0"><i class="bi bi-geo"></i> Mobility Areas</h6>
            </div>
            <div class="card-body p-3" id="mobilityNodesContainer">
              <div class="text-muted text-center py-3">
                <i class="bi bi-info-circle"></i> Select a region to load mobility areas
              </div>
            </div>
          </div>

          <!-- Area Encoding Section -->
          <div class="card mb-3 border-0 shadow-sm">
            <div class="card-header bg-info text-white py-2">
              <h6 class="mb-0"><i class="bi bi-diagram-3"></i> Area Encoding</h6>
            </div>
            <div class="card-body p-3">
              <div class="mb-3">
                <label for="thresholdSlider" class="form-label small fw-bold">
                  Distance Threshold: <span id="thresholdValue" class="text-info">2.0</span> km
                </label>
                <input 
                  type="range" 
                  class="form-range" 
                  id="thresholdSlider" 
                  min="0.5" 
                  max="5.0" 
                  step="0.1" 
                  value="2.0"
                  oninput="updateThresholdValue(this.value)"
                >
                <div class="d-flex justify-content-between small text-muted">
                  <span>0.5km</span>
                  <span>5.0km</span>
                </div>
              </div>
              <div class="d-grid mb-3">
                <button 
                  id="areaEncodingBtn" 
                  class="btn btn-outline-info"
                  onclick="toggleAreaEncoding()" 
                  disabled
                  title="Load mobility nodes and routes first"
                >
                  <i class="bi bi-diagram-3"></i> 
                  <span id="encodingBtnText">Start Area Encoding</span>
                </button>
              </div>
              <div class="text-center">
                <div id="encodingStatus" class="small text-muted mb-1">
                  Load data to start area encoding
                </div>
                <div id="encodingStats" class="small text-info">
                  <!-- Connection stats will appear here -->
                </div>
              </div>
            </div>
          </div>

          <!-- Mobility Matrix Section -->
          <div class="card mb-3 border-0 shadow-sm">
            <div class="card-header bg-warning text-dark py-2">
              <h6 class="mb-0"><i class="bi bi-table"></i> OD Matrix Analysis</h6>
            </div>
            <div class="card-body p-3">
              <div class="mb-3">
                <label for="mobilityMatrixSelect" class="form-label small fw-bold">
                  Select Matrix File:
                </label>
                <select
                  class="form-select form-select-sm"
                  id="mobilityMatrixSelect"
                  onchange="loadMobilityMatrix(this.value)"
                >
                  <option value="" selected disabled>
                    Choose matrix file...
                  </option>
                  <!-- Options will be populated dynamically -->
                </select>
              </div>
            </div>
          </div>

          <!-- Node Analysis Section -->
          <div class="card mb-3 border-0 shadow-sm">
            <div class="card-header bg-secondary text-white py-2">
              <h6 class="mb-0"><i class="bi bi-calculator"></i> Node Analysis</h6>
            </div>
            <div class="card-body p-3">
              <div class="row g-2 small">
                <div class="col-6">
                  <div class="text-muted">Selected Nodes:</div>
                  <div id="selectedNodes" class="fw-bold">None</div>
                </div>
                <div class="col-6">
                  <div class="text-muted">Mobility %:</div>
                  <div id="mobilityPercentage" class="fw-bold text-warning">N/A</div>
                </div>
                <div class="col-6">
                  <div class="text-muted">Travel Distance:</div>
                  <div id="googleDistance" class="fw-bold text-primary">N/A</div>
                </div>
                <div class="col-6">
                  <div class="text-muted">Direct Distance:</div>
                  <div id="directDistance" class="fw-bold text-success">N/A</div>
                </div>
              </div>
              <div class="mt-2 text-muted small">
                <i class="bi bi-info-circle"></i> Click 2 mobility areas to analyze
              </div>
            </div>
          </div>

      </div>
    </div>
  </div>
</div>
